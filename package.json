{
  "name": "tidb-desktop",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "description": "TiDB Desktop migrated to Electrobun + Bun",
  "scripts": {
    "dev": "bun run build && electrobun dev",
    "dev:hmr": "concurrently \"bun run hmr\" \"bun run dev\"",
    "hmr": "vite --port 5173",
    "build:web": "vite build",
    "build": "vite build && electrobun build",
    "build:mac": "vite build && electrobun build --mac",
    "release": "bun run build:mac",
    "typecheck": "tsc --noEmit -p tsconfig.json && tsc --noEmit -p tsconfig.bun.json"
  },
